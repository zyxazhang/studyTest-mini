/* pages/components/addressManagement/addressManagement.wxss */

.address {
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}
.head {
  display: flex;
  margin-bottom: 20rpx;
}
.head .tag {
  width: 50rpx;
}
.head .content {
  flex: 1;
}
.head .edit {
  width: 60rpx;
}
.body {
  display: flex;
  color: #597591;
  font-size: 28rpx;
}
.body .name {
  margin-right: 20rpx;
}