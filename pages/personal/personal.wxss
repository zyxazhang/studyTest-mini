.user {
  width: 100%;
  height: 200rpx;
  padding: 30rpx 40rpx 40rpx 0rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.user .user-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* background-color: aqua; */
}
.user .male {
  color: #ec95bc;
}
.user .user-name {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.pers {
  width: 100%;
  height: 120rpx;
  color: antiquewhite;
  border-radius: 16rpx;
  line-height: 104rpx;
  padding: 8rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.pers-ctr {
  border-radius: 16rpx;
