.search {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.placeholder {
  width: 100%;
  height: 100rpx;
  opacity: 0;
}
.input {
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}
.art {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.art .img {
  width: 100rpx;
  height: 100rpx;
  background-color: aqua;
}
.art .img image {
  width: 100rpx;
  height: 100rpx;
  background-color: aqua;
}
.art .content {
  width: calc(100% - 200rpx);
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 4rpx;
  box-sizing: border-box;
}
.art .content .name {
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.art .content .desc {
  font-size: 24rpx;
  color: #999aaa;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.art .time {
  font-size: 20rpx;
  width: 100rpx;
  height: 20rpx;
  line-height: 20rpx;
  /* background-color: aquamarine; */
}
